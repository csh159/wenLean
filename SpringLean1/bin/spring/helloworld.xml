<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context                http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<!-- id 表示你这个组件的名字，class表示组件类 -->
	<bean id="hello" name="hello_name" class="com.csh.spring.learn.HelloImpl"></bean>
	<bean name="impl2" class="com.csh.spring.learn.HelloImpl2">
	    <constructor-arg index="0" value="1" type="int"></constructor-arg>
	    <constructor-arg index="1" value="10" type="int"></constructor-arg>
	</bean>
	<bean name="impl2_1" class="com.csh.spring.learn.HelloImpl2"></bean>
</beans>
